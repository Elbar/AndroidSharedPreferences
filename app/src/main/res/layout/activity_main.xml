<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
            android:id="@+id/txt_enable_background_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enable_background: "/>

    <TextView
            android:id="@+id/txt_enable_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_enable_background_hint"
            android:layout_alignBaseline="@id/txt_enable_background_hint"
            android:text="default"/>

    <TextView
            android:id="@+id/txt_server_address_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_enable_background_hint"
            android:text="server_address: "/>

    <TextView
            android:id="@+id/txt_server_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_server_address_hint"
            android:layout_alignBaseline="@id/txt_server_address_hint"
            android:text="default"/>

    <TextView
            android:id="@+id/txt_color_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_server_address_hint"
            android:text="color: "/>

    <TextView
            android:id="@+id/txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_color_hint"
            android:layout_alignBaseline="@id/txt_color_hint"
            android:text="default"/>

    <TextView
            android:id="@+id/txt_colors_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_color_hint"
            android:text="colors: "/>

    <TextView
            android:id="@+id/txt_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_colors_hint"
            android:layout_alignBaseline="@id/txt_colors_hint"
            android:text="default"/>

    <TextView
            android:id="@+id/txt_switch_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_colors_hint"
            android:text="switch: "/>

    <TextView
            android:id="@+id/txt_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_switch_hint"
            android:layout_alignBaseline="@id/txt_switch_hint"
            android:text="default"/>

    <TextView
            android:id="@+id/txt_rec_quality_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_switch_hint"
            android:text="record quality: "/>

    <TextView
            android:id="@+id/txt_rec_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_rec_quality_hint"
            android:layout_alignBaseline="@id/txt_rec_quality_hint"
            android:text="default"/>

    <TextView
            android:id="@+id/txt_store_path_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_rec_quality_hint"
            android:text="store directory: "/>

    <TextView
            android:id="@+id/txt_store_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_store_path_hint"
            android:layout_alignBaseline="@id/txt_store_path_hint"
            android:text="default"/>
</RelativeLayout>
